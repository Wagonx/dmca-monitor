# Copy to config.yaml and fill in
search_terms:
  - your_username
  - another_alias

engines:
  google:
    enabled: true
    api_key: "YOUR_GOOGLE_API_KEY"   # from Google Cloud (enabled Custom Search JSON API)
    cse_id:  "YOUR_CSE_ID"           # from Programmable Search Engine
    image_count_per_term: 10         # image results per term per run (counts against quota)
    web_count_per_term: 5            # optional: web results to scrape for extra <img>

notify:
  # slack_webhook: ""            # optional Slack webhook URL
  # discord_webhook: "https://discord.com/api/webhooks/XXXXXXXX/YYYYYYYY"
  # Optional cosmetics:
  # discord_username: "DMCA Monitor"
  # discord_avatar_url: ""   # e.g., https://example.com/icon.png


match:
  threshold: 7                 # Hamming distance cutoff (lower = stricter)
  use_ssim: false              # slower second-pass confirmation

paths:
  hash_db: "db/hashes.json"
  seen_cache: "db/seen.json"
  alerts_state: "db/alerts.json"
  logs_csv: "logs/matches.csv"
  downloads: "scratch/downloads"

timeouts:
  request: 15
